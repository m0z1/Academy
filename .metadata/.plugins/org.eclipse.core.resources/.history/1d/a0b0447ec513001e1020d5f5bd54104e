<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
 <mapper namespace="com.myspirng.Person">
 <sql id="search">
 <where>
  <if test="word != null and field=='name'">
 where name like '%${word}%'
 </if>
  <if test="word != null and field=='job'">
 where job like '%${word}%'
 </if>
 </where>
 </sql>
 
 
 <insert id="personInsert" 
 parameterType="com.myspring.vo.Person4">
 insert into person values(#{id}, #{name},#{password}, #{gender},#{job})
  </insert>
  <select id="personlist" 
     resultType="com.myspring.vo.Person4">
  select * from person
    </select>
    
    <select id="personcount" 
    resultType="int">
    select count(*) from person
    </select>
 
 <select id="personview" parameterType="String" resultType="com.myspring.vo.Person4">
 select * from person where id=#{id}
 </select>
 
 <!-- 삭제하기 -->
 <delete id="persondelete" parameterType="String" >
 delete from person where id=#{id}
 </delete>
 
 <update id= "personupdate" parameterType="com.myspring.vo.Person4">
 update person set name=#{name} , password=#{password} , gender=#{gender} , job=#{job}   where id=#{id}
 </update>
 
 <select id="searchPerson" parameterType="java.util.Map" resultType="com.myspring.vo.Person4">
 select * from person 
<include refid="search"></include>
 <!-- #='' 포함된 객체 , $ 포함되지 않는 객체  -->
 </select>
 
 <select id ="searchCount" parameterType="java.util.Map" resultType="int">
 select count(*) from person 
<include refid="search"></include>
 </select>
 </mapper>