 <mapper namespace="com.myguest.mapper.Guest">
 <sql id="search">
 <where>
 	<if test="word != null and field='name'">
 	name like CONCAT{'%',#{word},'%'}
 	</if>
 	
 		<if test="word != null and field='name'">
 	content like CONCAT{'%',#{word},'%'}
 	</if>
 </where>
 </sql>
 <insert id="gInsert" parameterType="com.myspring.model.Guest">
 insert into guest(name,content, grade,created, ipaddr)
  values(#{name}, #{content},#{grade}, now(), #{ipaddr})
 </insert>
 <select id="list" resultType="com.myspring.model.Guest">
 
 select * from guest
 <include refid="searh"></include>
 </select>
 
 <select id="count" resultType="int" parameterType="com.myspring.model.Guest">
 select count(*) from guest
 </select>
