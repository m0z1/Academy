<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".Board.missingBoard.MissyouBoardList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/missyou"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/lost_nobackground" />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:background="#a0a0a0" />

    <LinearLayout
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/SearchViewMiss"
            android:layout_width="295dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:iconifiedByDefault="false"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/writeMissyou"
            android:background="@drawable/button_round"
            android:text="글쓰기"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="60dp"
            android:layout_height="45dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:background="#56C8B3"
            android:id="@+id/DogMissbtn"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:backgroundTint="@color/button_selected"
            android:text="강아지" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/CatMissbtn"
            android:background="#56C8B3"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:backgroundTint="@color/button_selected"
            android:text="고양이" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/EtcMissbtn"
            android:background="#56C8B3"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:backgroundTint="@color/button_selected"
            android:text="기타" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:background="#a0a0a0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recylerviewMissyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#56C8B3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/member"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#00ff0000"
                android:src="@drawable/person_menu" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goTomissing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#56C8B3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="MISSING"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#56C8B3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="STORY"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Shelter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#56C8B3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="SHELTER"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>