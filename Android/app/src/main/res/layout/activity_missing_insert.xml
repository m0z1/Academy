<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MissingInsert">

    <EditText
        android:id="@+id/edtBreed"
        android:text="종 : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
    android:id="@+id/edtContent"
        android:text="내용 : "
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <DatePicker
        android:id="@+id/edtRegdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"/>
    <EditText
        android:id="@+id/edtPetname"
        android:text="이름 : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
    android:id="@+id/edtPetAge"
    android:text="나이 : "
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Date"
        android:text="날짜 선택 뷰 "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtPetgender"
        android:text="성별 : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtPetCharacter"
        android:text="특징 : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtPetcategory"
        android:text="동물종류 : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtFindaddr"
        android:text="발견장소 : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제출"/>

</LinearLayout>