<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/member"
                android:layout_width="78dp"
                android:layout_height="81dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/member" />
            <TextView
                android:id="@+id/memberName"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="안녕하세요"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/missyou"
            android:layout_width="243dp"
            android:layout_height="match_parent"
            android:src="@drawable/lost" />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:background="#a0a0a0" />

    <LinearLayout
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/SearchViewMiss"
            android:layout_width="300dp"
            android:layout_marginRight="9dp"
            app:iconifiedByDefault="false"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/writeMissyou"
            android:background="#f89b00"
            android:text="글쓰기"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:background="#fe8f00"
            android:id="@+id/DogMissbtn"
            android:layout_width="135dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="강아지" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/CatMissbtn"
            android:background="#ffda09"
            android:layout_width="135dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"

            android:layout_height="wrap_content"
            android:text="고양이" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/EtcMissbtn"
            android:background="#d58600"
            android:layout_width="135dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="기타" />




    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:background="#a0a0a0" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylerviewMissyou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>






</LinearLayout>